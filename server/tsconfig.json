{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
